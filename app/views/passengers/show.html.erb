<nav>
  <ul>
    <li>
      <%= link_to "Home", trips_path %>
    </li>
    <li>
      <%= link_to "Add Passenger", new_passenger_path %>
    </li>
  </ul>
</nav>

<header>
  <h1><%=@passenger.name%></h1>
  <section>
    <p>
      Phone Number: <%= @passenger.phone_num %>
    </p>
    <p>
      <%= link_to "Edit", edit_passenger_path(@passenger.id)%>
      <%= link_to "Delete", passenger_path(@passenger.id), method: :delete, data: { confirm: 'Are you sure you want to delete this passenger?' }  %>
    </p>
  </section>
</header>
<main>
  <table>
    <tr>
      <th>
        Trip ID
      </th>
      <th>
        Passenger
      </th>
      <th>
        Driver
      </th>
      <th>
        Date
      </th>
      <th>
        Rating
      </th>
      <th>
        Cost
      </th>
    </tr>
    <% @passenger.trips.all.each do |trip| %>
      <tr>
        <td><%= link_to trip.id, trip_path(trip.id)%></td>
        <td><%= @passenger.name %></td>
        <td>
          <%if trip.driver_id %>
            <%= link_to @drivers.find(trip.driver_id).name, driver_path(trip.driver_id) %>
            <% else %>
            <%= link_to "Deleted driver", drivers_path %>
          <%end%>
      </td>
      <td><%= trip.date %></td>
      <td><%= trip.rating %></td>
      <td>$<%= trip.cost.to_f/100 %></td>
    <%end%>
  </tr>
  </table>
</main>
